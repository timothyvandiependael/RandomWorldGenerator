<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RandomWorldGenerator.res">
    
    <Style TargetType="{x:Type Control}" x:Key="WorldOptionControlStyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style TargetType="{x:Type Label}" x:Key="WorldOptionLabelStyle" BasedOn="{StaticResource WorldOptionControlStyle}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="{x:Type TextBox}" x:Key="WorldOptionTextBoxStyle" BasedOn="{StaticResource WorldOptionControlStyle}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="200"/>
    </Style>
    
    <Style TargetType="{x:Type Slider}" x:Key="WorldOptionSliderStyle" BasedOn="{StaticResource WorldOptionControlStyle}">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
    </Style>

</ResourceDictionary>